*******data prepration ***************; 
data class_copy; 
    set sashelp.class; 
    where age>15; 
    keep Age Height Weight; 
run; 
 
*****droping column*******; 
DATA class_copy; 
set sashelp.class; 
where age>15; 
drop  Age Height Weight; 
run; 
