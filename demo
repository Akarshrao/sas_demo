****DO WHILE****; 
DATA MYDATA; 
SUM = 0; 
VAR = 1; 
DO WHILE(VAR<6) ; 
   SUM = SUM+VAR; 
   VAR+1; 
END; 
PROC PRINT; 
RUN; 
**********DO UNTILL*************; 
DATA MYDATA; 
SUM = 0; 
VAR = 1; 
DO UNTIL(VAR>5); 
   SUM = SUM+VAR; 
   VAR+1; 
END; 
   PROC PRINT; 
   RUN; 
   
   Results: Program 1
   
   
Obs	SUM	VAR
1	15	6
Obs	SUM	VAR
1	15	6


*********DECISION MAKING***************; 
DATA EMPDAT; 
INPUT   EMPID ENAME $ SALARY DEPT $ DOJ DATE9.; 
LABEL ID = 'Employee ID'; 
FORMAT DOJ DATE9.; 
DATALINES; 
1 Rick 623.3 IT 02APR2001 
2 Dan 515.2 OPS 11JUL2012 
3 Mike 611.5 IT 21OCT2000 
4 Ryan 729.1 HR 30JUL2012 
5 Gary 843.2 FIN 06AUG2000 
6 Tusar 578.6 IT 01MAR2009 
7 Pranab 632.8 OPS 16AUG1998 
8 Rasmi 722.5 FIN 13SEP2014 
; 
Data EMPDAT1; 
Set EMPDAT; 
IF SALARY > 650 THEN SAL_GROUP="High"; 
else SAL_GROUP="low"; 
PROC PRINT DATA = EMPDAT; 
run; 

Results: Program 1


